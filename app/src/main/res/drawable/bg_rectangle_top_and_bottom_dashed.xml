<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top dashed line -->
    <item
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="@color/blue"
                android:dashWidth="8dp"
                android:dashGap="4dp" />
        </shape>
    </item>
    <!-- Rectangle -->
    <item
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/green" />
        </shape>
    </item>
    <!-- Bottom dashed line -->
    <item
        android:top="2dp"
        android:bottom="0dp">
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="@color/reddish_orange"
                android:dashWidth="8dp"
                android:dashGap="4dp" />
        </shape>
    </item>
</layer-list>



