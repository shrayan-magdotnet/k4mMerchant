<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="16dp"
    app:strokeColor="@color/bg_border"
    app:strokeWidth="0dp"
    app:cardCornerRadius="6dp"
    app:contentPaddingBottom="8dp"
    app:contentPaddingLeft="16dp"
    app:contentPaddingRight="16dp"
    app:contentPaddingTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/branchTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-medium"
            android:text="@string/branch_1"
            android:textColor="@color/transaction_header_amounts" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/branchTV"
            android:layout_alignStart="@id/branchTV"
            android:layout_gravity="start"
            android:ellipsize="end"
            android:textSize="12sp"
            android:maxLines="1"
            android:text="@string/branch_1"
            android:layout_toStartOf="@id/iv_arrow"
            android:textColor="@color/grayText"
            tools:text="@tools:sample/lorem/random" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/grayButton" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
