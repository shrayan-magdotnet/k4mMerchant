<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/green_gradient_background"
    android:elevation="8dp"
    android:paddingVertical="16dp"
    app:cardCornerRadius="10dp"
    app:strokeColor="@color/bg_border"
    app:strokeWidth="0.75dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/merchantNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/south_indian_grocery"
                    android:textColor="@color/primary_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/merchantAddressTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:text="@tools:sample/lorem"
                    android:textColor="@color/grayText"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingStart="16dp">


                <TextView
                    android:id="@+id/earnedTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="@string/dollar_20_00"
                    android:textColor="@color/primary_text_color"
                    android:textSize="25sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/earnedLTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/your_cashback"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_text_color"
                    android:textSize="9sp" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="16dp">


            <!--        <LinearLayout-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_weight="2"-->
            <!--            android:gravity="right"-->
            <!--            android:orientation="vertical"-->
            <!--            android:paddingStart="4dp">-->

            <!--            <TextView-->
            <!--                android:id="@+id/spentLTV"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Spent"-->
            <!--                android:fontFamily="sans-serif-medium" />-->

            <!--            <TextView-->
            <!--                android:id="@+id/spentTV"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:maxLines="1"-->
            <!--                android:text="$75.00"-->
            <!--                android:textColor="@color/blue"-->
            <!--                android:fontFamily="sans-serif-medium"-->
            <!--                app:autoSizeTextType="uniform" />-->


            <!--        </LinearLayout>-->

            <TextView
                android:id="@+id/statusTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="start"
                android:maxLines="1"
                android:text="@string/processing"
                android:textColor="@color/dark_orange"
                android:textSize="14sp"
                android:visibility="gone"
                app:autoSizeTextType="uniform"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/leftTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                android:maxLines="1"
                android:text="@string/dollar_20_00"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="14sp"
                app:autoSizeTextType="uniform" />

            <com.kash4me.utils.custom_views.CurrencyTextView
                android:id="@+id/tv_amount_left_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="14sp"
                app:autoSizeTextType="uniform"
                tools:text="@string/dollar_20_00" />

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>