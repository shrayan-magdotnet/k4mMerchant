<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme.DayNight" parent="Theme.Kash4me" />

    <style name="Theme.Kash4me" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenish_blue</item>
        <item name="colorPrimaryVariant">@color/greenish_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greenish_blue</item>
        <item name="colorSecondaryVariant">@color/greenish_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/ui_color</item>
        <!--        <item name="android:background">@color/ui_color</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="chipCornerRadius">4dp</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/App.TextInputLayout</item>
        <item name="materialButtonStyle">@style/App.Button</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>
</resources>